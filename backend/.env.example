# ============================================================================
# PRODUCTION CONFIGURATION - HoneyGuard
# ============================================================================

# Flask Configuration
FLASK_ENV=production
DEBUG=False
SECRET_KEY=your-secret-key-here

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PORT=15845
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Database
SQLITE_DB_PATH=logs.db

# Authentication Route Configuration - Custom route for security (honeypot)
# Change this to a random, unpredictable path to hide critical auth endpoints
AUTH_ROUTE_PREFIX=your-custom-auth-prefix

# External APIs
ABUSEIPDB_API_KEY=your-abuseipdb-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Gunicorn Production Configuration
GUNICORN_PORT=5000
GUNICORN_ENVIRONMENT=production
GUNICORN_WORKERS=8
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_LOG_LEVEL=warning
GUNICORN_TIMEOUT=60
GUNICORN_MAX_REQUESTS=3000

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=False
SESSION_COOKIE_SAMESITE=None

# SSL/TLS Configuration
SSL_DISABLE=True
FORCE_HTTPS=False

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://default:your-redis-password@your-redis-host:15845

# Logging Configuration
LOG_LEVEL=WARNING
LOG_TO_FILE=True

# Authentication Configuration
# Single password for all protected areas
UNLOCK_PASSWORD=your-admin-password

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRATION_HOURS=24

# Logging Configuration
LOG_FILE_PATH=logs/app.log